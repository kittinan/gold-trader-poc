# Gold Trader POC - Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# Django Settings
# =============================================================================
SECRET_KEY=django-insecure-dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend,example.com

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_NAME=gold_trader
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# Redis Configuration (Cache & Channel Layer)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Frontend API Configuration
# =============================================================================
# For development
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# For production (update with your domain)
# VITE_API_URL=https://api.example.com/api
# VITE_WS_URL=wss://api.example.com/ws

# =============================================================================
# Django Security (Production)
# =============================================================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
